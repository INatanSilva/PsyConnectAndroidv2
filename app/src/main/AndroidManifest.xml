<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".PsyConnectApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PsyConnectAndroid">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />

        <activity
            android:name=".PatientActivity"
            android:exported="false"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".AllDoctorsActivity"
            android:exported="false"
            android:label="@string/title_activity_all_doctors"
            android:parentActivityName=".PatientActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />

        <activity
            android:name=".DoctorProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".BookingConfirmationActivity"
            android:exported="false"
            android:label="Confirmar Agendamento"
            android:parentActivityName=".DoctorProfileActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:label="Pagamento"
            android:parentActivityName=".BookingConfirmationActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".MyAppointmentsActivity"
            android:exported="false"
            android:label="Minhas Consultas"
            android:parentActivityName=".PatientActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Meu Perfil"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />

        <!-- Doctor Activities -->
        <activity
            android:name=".DoctorDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".DoctorScheduleActivity"
            android:exported="false"
            android:label="Minha Agenda"
            android:parentActivityName=".DoctorDashboardActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />

        <activity
            android:name=".ManageAvailabilityActivity"
            android:exported="false"
            android:label="Gerenciar Disponibilidade"
            android:parentActivityName=".DoctorDashboardActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".AppointmentDetailsDoctorActivity"
            android:exported="false"
            android:label="Detalhes da Consulta"
            android:parentActivityName=".DoctorScheduleActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <!-- Chat Activities -->
        <activity
            android:name=".ChatListActivity"
            android:exported="false"
            android:label="Mensagens"
            android:parentActivityName=".PatientActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:label="Chat"
            android:parentActivityName=".ChatListActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <!-- Patient Notes Activity -->
        <activity
            android:name=".PatientNotesActivity"
            android:exported="false"
            android:label="Minhas Anotações"
            android:parentActivityName=".PatientActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".PatientNoteDetailActivity"
            android:exported="false"
            android:label="Detalhes da Anotação"
            android:parentActivityName=".PatientNotesActivity"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <!-- Video Call Activities -->
        <activity
            android:name=".CallActivity"
            android:exported="false"
            android:label="Chamada de Vídeo"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar" />
            
        <activity
            android:name=".IncomingCallActivity"
            android:exported="false"
            android:label="Chamada Recebida"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PsyConnectAndroid.NoActionBar"
            android:launchMode="singleTop" />

    </application>

</manifest>