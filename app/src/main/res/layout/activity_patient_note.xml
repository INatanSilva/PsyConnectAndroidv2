<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paciente"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Feelings and Symptoms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Queixas e Sintomas"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etFeelingsAndSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva as queixas e sintomas do paciente"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Patient Needs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Necessidades do Paciente"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etPatientNeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva as necessidades do paciente"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Referral -->
        <CheckBox
            android:id="@+id/cbReferralNeeded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precisa de encaminhamento?"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etReferralDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="4"
            android:hint="Detalhes do encaminhamento"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <!-- Diagnostic Hypotheses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hipóteses Diagnósticas"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etDiagnosticHypotheses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva as hipóteses diagnósticas"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Therapeutic Goals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objetivos Terapêuticos"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etTherapeuticGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva os objetivos terapêuticos"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Interventions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intervenções Realizadas"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etInterventions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva as intervenções realizadas"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Observations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observações"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Observações adicionais"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Care Plan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plano de Cuidado"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/etCarePlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:hint="Descreva o plano de cuidado"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Risk Level -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nível de Risco"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <Spinner
            android:id="@+id/spinnerRiskLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Share with Patient -->
        <CheckBox
            android:id="@+id/cbShareWithPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compartilhar com paciente"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Anotação"
            android:background="@drawable/bg_button_pressed"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>


